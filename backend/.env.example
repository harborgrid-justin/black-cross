# Application
NODE_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Database - PostgreSQL with Sequelize
# ⚠️  SECURITY WARNING: NEVER commit real credentials to version control!
# ⚠️  Use environment-specific .env files (not tracked in git)
# For local development, use: postgresql://postgres:postgres@localhost:5432/blackcross
# For production, use your managed PostgreSQL service (Neon, AWS RDS, etc.)
DATABASE_URL="postgresql://username:password@hostname:5432/database?sslmode=require"

# Database - PostgreSQL (parsed from DATABASE_URL or set individually)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blackcross
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# MongoDB (for modules still using MongoDB)
MONGODB_URI=mongodb://localhost:27017/blackcross

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Security
# ⚠️  CRITICAL: Generate strong, unique secrets for production!
# Generate with: openssl rand -base64 32
# JWT_SECRET must be at least 32 characters long
# ENCRYPTION_KEY must be exactly 32 characters (256-bit)
JWT_SECRET=PLEASE_CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION!!
SESSION_SECRET=PLEASE_CHANGE_THIS_TO_A_SECURE_RANDOM_SESSION_SECRET

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@black-cross.io

# Threat Intelligence API Keys
VIRUSTOTAL_API_KEY=your_virustotal_api_key
ALIENVAULT_API_KEY=your_alienvault_api_key
SHODAN_API_KEY=your_shodan_api_key
ABUSEIPDB_API_KEY=your_abuseipdb_api_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
