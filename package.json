    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.0.3",
    "pg": "^8.11.0",
    "mongoose": "^7.0.0",
    "redis": "^4.6.5",
    "@elastic/elasticsearch": "^8.7.0",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "winston": "^3.8.2",
    "axios": "^1.4.0",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "socket.io": "^4.6.1",
