# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@black-cross.io

# Slack Integration
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#security-alerts

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=

# AWS Configuration (for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=blackcross-evidence

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=blackcross-evidence

# GCP Configuration
GCP_PROJECT_ID=
GCP_STORAGE_BUCKET=blackcross-evidence

# SIEM Integration
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
QRADAR_HOST=
QRADAR_TOKEN=

# EDR Integration
CROWDSTRIKE_CLIENT_ID=
CROWDSTRIKE_CLIENT_SECRET=
CARBON_BLACK_API_KEY=
SENTINELONE_API_TOKEN=

# Sandbox Configuration
CUCKOO_API_URL=http://localhost:8090
CUCKOO_API_TOKEN=
VIRUSTOTAL_SANDBOX_ENABLED=true

# Dark Web Monitoring
DARK_WEB_PROXY=
TOR_PROXY=socks5://localhost:9050

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/application.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# SSO/SAML Configuration
SAML_ENABLED=false
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CERT=

# OAuth Configuration
OAUTH_ENABLED=false
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_CALLBACK_URL=

# Feature Flags
FEATURE_DARK_WEB_MONITORING=true
FEATURE_MALWARE_SANDBOX=true
FEATURE_AUTOMATED_RESPONSE=true
FEATURE_THREAT_HUNTING=true
FEATURE_COMPLIANCE_MANAGEMENT=true

# Performance Configuration
MAX_FILE_UPLOAD_SIZE=100mb
MAX_QUERY_RESULTS=10000
CACHE_TTL=3600
WORKER_THREADS=4

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=/backups

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Development
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true
